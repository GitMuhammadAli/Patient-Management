<h2 class="head">
    <%= locals.discription %> / <%= locals.patient.nic %>
</h2>

<% locals.messages.info.forEach(message=> { %>
    <div class="alert alert-success" role="alert">
        <%= message %>
            <button type="button" class="closebtn" onclick="this.parentElement.style.display='none';"
                aria-label="Close">
                &times;
            </button>
    </div>
    <% }) %>

        <% locals.messages.error.forEach(message=> { %>
            <div class="alert erroralert-success" role="alert">
                <%= message %>
                    <button type="button" class="closebtn" onclick="this.parentElement.style.display='none';"
                        aria-label="Close">
                        &times;
                    </button>
            </div>
            <% }) %>

                <div class="form-container">
                    <form action="/update/<%= locals.patient._id %>" method="POST" enctype="multipart/form-data">
                        <div class="form-row">
                            <div class="input-group">
                                <label for="name">Name:</label>
                                <input type="text" id="name" name="name" required value="<%= locals.patient.name %>">
                            </div>
                            <div class="input-group">
                                <label for="phoneNo">Phone No:</label>
                                <input type="tel" id="phoneNo" name="phoneNo" required
                                    value="<%= locals.patient.phoneNo %>">
                            </div>
                        </div>
                        <div class="form-row">
                            <div class="input-group">
                                <label for="email">Email:</label>
                                <input type="email" id="email" name="email" required
                                    value="<%= locals.patient.email %>">
                            </div>
                            <div class="input-group">
                                <label for="nic">Cnic:</label>
                                <input type="number" id="nic" name="nic" required value="<%= locals.patient.nic %>">
                            </div>

                        </div>
                        <div class="form-row">
                            <div class="input-group-age">
                                <label for="age">Age:</label>
                                <input type="number" id="age" name="age" required value="<%= locals.patient.age %>">
                            </div>
                            <div class="input-group-file">
                                <label for="file">Upload Multiple Files:</label>
                                <input type="file" id="file" name="files" accept=".pdf,.doc,.docx,.jpg,.jpeg,.png"
                                    value="<%= locals.patient.file%>" multiple accept = ".pdf,.doc,.docx,.jpg,.jpeg,.png,.csv">
                            </div>
                        </div>
                        <div class="form-row full-width">
                            <div class="input-group">
                                <label for="Address">Address:</label>
                                <input type="text" id="Address" name="address" value="<%= locals.patient.address %>">
                            </div>
                            <div class="input-group">
                                <label for="gender">Gender</label>
                                <select id="gender" name="gender" required>
                                    <option value="male">Male</option>
                                    <option value="female">Female</option>
                                </select>
                            </div>
                        </div>
                </div>
                <button type="submit">Update patients</button>
                </form>
                </div>